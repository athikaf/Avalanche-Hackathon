# Deployment Configuration
DEPLOYMENT_TIMEOUT=300000
DEPLOYMENT_CONFIRMATIONS=3
DEPLOYMENT_VERIFY=true
DEPLOYMENT_VERIFY_RETRIES=3
DEPLOYMENT_VERIFY_DELAY=10000

# Security
SECURITY_AUDIT=true
SECURITY_SLITHER=true
SECURITY_MYTHRIL=true
