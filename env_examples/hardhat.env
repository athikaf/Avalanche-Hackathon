# Documentation
DOCS_GENERATION=true
DOCS_FORMAT=markdown
DOCS_OUTPUT_DIR=docs/contracts

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000
MONITORING_RETRY_ATTEMPTS=3
MONITORING_RETRY_DELAY=5000

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
