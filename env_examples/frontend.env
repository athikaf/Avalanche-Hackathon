# Contract Addresses
NEXT_PUBLIC_CROSS_CHAIN_MESSAGE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_GOVERNANCE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MONITOR_ADDRESS=0x0000000000000000000000000000000000000000

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Feature Flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_CROSS_CHAIN=true
NEXT_PUBLIC_ENABLE_GOVERNANCE=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CSP_REPORT_URI=https://your-domain.com/csp-report
NEXT_PUBLIC_HSTS_ENABLED=true
NEXT_PUBLIC_HSTS_MAX_AGE=31536000
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS=true
NEXT_PUBLIC_HSTS_PRELOAD=true

# Performance
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_SUPPORT=true
NEXT_PUBLIC_ENABLE_CACHE=true
NEXT_PUBLIC_CACHE_VERSION=1
NEXT_PUBLIC_CACHE_MAX_AGE=86400

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=1.0
NEXT_PUBLIC_SENTRY_REPLAY_SAMPLE_RATE=0.1

# Monitoring
NEXT_PUBLIC_MONITORING_ENABLED=true
NEXT_PUBLIC_MONITORING_SAMPLE_RATE=0.1
NEXT_PUBLIC_MONITORING_ENDPOINT=https://your-monitoring-endpoint.com

# UI Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=["en", "es", "fr", "de", "zh", "ja", "ko"]
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_SUPPORTED_CURRENCIES=["USD", "EUR", "GBP", "JPY", "CNY"]

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=trustmesh
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/trustmesh
